<%- include('partials/header'); -%>

  <section class="portal">
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <h4>Sign Up</h4>
          <form action="/signUp" method="POST">

              <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" placeholder="First Name" name="firstName">
              </div>

              <div class="form-group">
                <label>LastName</label>
                <input type="text" class="form-control" placeholder="Last Name" name="lastName">
              </div>

              <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" placeholder="Username" name="username">
              </div>

              <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" placeholder="Email" name="email">
              </div>
              
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Password" name="password">
              </div>


            <div class="form-group">
              <label>Address</label>
              <input type="text" class="form-control" placeholder="Full Address" name="address">
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Country</label>
                <input type="text" class="form-control" placeholder="Country" name="country">
              </div>
              
              <div class="form-group col-md-6">
                <label>Zip/Postal Code</label>
                <input type="text" class="form-control" placeholder="Zip Code" name="zip">
              </div>
            </div>
            <small class="form-text text-muted">We'll never share your information with anyone else.</small> <br>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </form>

        </div>

        <div class="vertical-line"></div>

        <div class="col-sm">

          <h4>Sign In</h4>
          <form action="/signIn" method="POST">
            <div class="form-group">
              <label>Username</label>
              <input type="text" class="form-control" placeholder="Enter Username" name="username">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" placeholder="Enter Password" name="password">
            </div>
            <% if (error == "block") { %>
              <small id="wrongPassword" class="err">Error: Invalid Password or Account Not Found. Please make sure the username and password is correct.</small>
            <% } %>

            <button type="submit" class="btn btn-primary">Sign In</button>
          </form>

        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer'); -%> 